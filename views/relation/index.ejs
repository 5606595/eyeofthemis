<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>展示</title>
    <style>
        html, body {
            margin: 0;
            padding: 0;
        }
        #container {
            height: 700px;
        }
        #search {
            width: 100%;
            border-bottom: 1px solid rgba(0, 0, 0, 0.3);
            background: #eee;
            height: 50px;
            line-height: 50px;
        }
        #search form {
            margin: auto;
        }
        #search a {
            display: inline-block;
            padding: 13px;
            margin-left: 20px;
            line-height: 14px;
            text-decoration: none;
            color: rgb(51, 122, 255);
            transition: all .5s ease-out;
        }
        #search a:hover {
            background: #DDD;
            text-decoration: underline;
            cursor: pointer;
        }
        input {
            margin-left: calc(50% - 205px);
            width: 330px;
            height: 23px;
            outline: none;
            vertical-align: 2px;
            border: 3px solid rgb(255, 83, 0);
            margin-right: 0;
        }
        #btn {
            outline: none;
            display: inline-block;
            padding: 5px 25px;
            vertical-align: 2px;
            letter-spacing: 2px;
            background: rgb(255, 83, 0);
            color: white;
            border: 3px solid rgb(255, 83, 0);
            margin-left: -5px;
        }
        #btn:hover {
            background: rgb(245, 43, 0);
            cursor: pointer;
        }
        #white {
            background: white;
            display: none;
            width: 100%;
            height: 100%;
            position: fixed;
            opacity: 0.8;
            z-index: 200;
            transition: all .2s ease-out;
        }
        #form {
            position: fixed;
            left: 50%;
            top: 40%;
            transform: translate3d(-50%, -40%, 0);
            background: white;
            z-index: 300;
            text-align: center;
            box-shadow: 1px 1px 10px #999, -1px -1px 10px #999;
            border-radius: 4px;
            padding: 40px;
            transition: all .2s ease-out;
            display: none;
            opacity: 0.3;
        }


        @font-face {font-family: "iconfont";
            src: url('fonts/rel/iconfont.eot?t=1461123203'); /* IE9*/
            src: url('fonts/rel/iconfont.eot?t=1461123203#iefix') format('embedded-opentype'), /* IE6-IE8 */
            url('fonts/rel/iconfont.woff?t=1461123203') format('woff'), /* chrome, firefox */
            url('fonts/rel/iconfont.ttf?t=1461123203') format('truetype'), /* chrome, firefox, opera, Safari, Android, iOS 4.2+*/
            url('fonts/rel/iconfont.svg?t=1461123203#iconfont') format('svg'); /* iOS 4.1- */
        }

        .iconfont {
            font-family:"iconfont" !important;
            font-size:16px;
            font-style:normal;
            -webkit-font-smoothing: antialiased;
            -webkit-text-stroke-width: 0.2px;
            -moz-osx-font-smoothing: grayscale;
        }
        .icon-exit:before { content: "\e60d"; }
        .icon-exit {
            position: absolute;
            top: 10px;
            right: 16px;
            font-size: 18px;
            color: #AAA;
        }
        .icon-exit:hover {
            cursor: pointer;
        }
    </style>
</head>
<body>
<div id="white"></div>
<div id="form">
    <div class="iconfont icon-exit"></div>
    <div class="content"></div>
</div>
<div id="search">
    <form action="">
        <input type="text">
        <button id="btn">搜索</button>
    </form>
</div>
<div id="container">
</div>
</body>
<script src="js/jquery-1.11.2.min.js"></script>
<script src="js/echarts.min.js"></script>
<script src="js/rel.js"></script>
</html>